{
    "editor.tabSize": 2,
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "file": ".gitmessage",
        }
    ],
    "github.copilot.chat.agent.terminal.allowList": {
        "mise run build": true,
        "mise run test": true,
        "git status": true,
        "git add": true,
        "git diff": true,
        "git show": true,
        "find": true,
        "grep": true,
        "head": true,
        "tail": true
    },
    "github.copilot.chat.agent.terminal.denyList": {
        "rm": true,
        "rmdir": true,
        "del": true,
        "kill": true,
        "curl": true,
        "wget": true,
        "eval": true,
        "chmod": true,
        "chown": true,
        "Remove-Item": true
    }
}
module EvenOdd = {
  module {..} = import Builtin;
  module {..} = import Prelude;

  def even = {
    | 0 -> True
    | n -> odd (subInt32 n 1)
  };

  def odd = {
    | 0 -> False
    | n -> even (subInt32 n 1)
  };

  def main =
    { { False -> putStrLn "False"
    | True -> putStrLn "True" } (even 10) };
}

-- Expected: True

PROGRAM = malgo

FILES[] =
	main

USE_OCAMLFIND = true

OCAMLPACKS[] =
	unix

OCamlProgram($(PROGRAM), $(FILES))

.DEFAULT: $(if $(BYTE_ENABLED), $(PROGRAM).run) \
				  $(if $(NATIVE_ENABLED), $(PROGRAM).opt)

.PHONY: clean
clean: rm -f $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
						$(PROGRAM).run $(PROGRAM).opt
